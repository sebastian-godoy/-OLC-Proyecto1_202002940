non terminal programa;
non terminal segmentoA, segmentoB, segmentoA_varios, segmentoB_varios, notacion,
notacionA, notacionB, exReg;



start with programa;

programa ::= llaveA segmentoA_varios porcentaje porcentaje segmentoB_varios llaveC;
